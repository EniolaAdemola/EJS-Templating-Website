<%- include("partials/header"); -%>
<h1>Compose</h1>
    <form action="/compose" method="post">
        <div class="form-group">
            <label for="composeMessage">Title: </label>
            <div>
                <input class="form-control" type="text" name="postTitle" id="itemToAdd">
            </div>
        </div>
        <div class="form-group">
            <label for="post">Post: </label>
            <div class="">
                <textarea class="form-control" name="message" id="post" rows="3"  required></textarea>
            </div>
        </div>
         <button class="btn btn-primary" type="submit">Publish</button>
    </form>

<%- include("partials/footer");-%>